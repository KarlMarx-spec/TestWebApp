@page
@model WebApplication3.Pages.Offices.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Office</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Office.Id" />
            <div class="form-group">
                <label for="Office.Name" class="col-sm-2 control-label">Название отдела</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="Office.Name">
                </div>
            </div>
            <div class="form-group">
                <label for="Office.DepartmentId" class="col-sm-2 control-label">Id Департамента</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="Office.DepartmentId">
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a href="/Offices/Index" class="btn btn-primary">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
