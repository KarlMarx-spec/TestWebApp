@page
@model WebApplication3.Pages.Departments.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Изменение данных департамента</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Department.Id" />
            <div class="form-group">
                <p>Название департамента</p>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="Department.Name">
                </div>
                <p>Id компании</p>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="Department.CompanyId">
                </div>
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a href="/Departments/Index" class="btn btn-primary">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
