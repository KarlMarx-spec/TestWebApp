@page
@model WebApplication3.Pages.Departments.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Создание департамента</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label for="Department.Name" class="col-sm-2 control-label">Название Департамента</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="Department.Name">
                </div>
            </div>
            <div class="form-group">
                <label for="Department.CompanyId" class="col-sm-2 control-label">Id компании</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="Department.CompanyId">
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a href="/Departments/Index" class="btn btn-primary">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
